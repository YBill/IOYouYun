<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    tools:context=".contacts.InviteMemberActivity">

    <TextView
        android:id="@+id/tv_confirm_invite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f1f2f4"
        android:gravity="center"
        android:text="@string/confirm_invite"
        android:textSize="20sp" />

    <fragment
        android:id="@+id/fragment_contact"
        android:name="com.ioyouyun.home.fragment.ContactsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_confirm_invite" />

</RelativeLayout>
